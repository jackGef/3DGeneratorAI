body {
    margin: 0;
    padding: 0;
}

.chat-page-container {
    display: flex;
    flex-direction: row;
    height: 100vh;
    overflow: hidden;
    position: relative;
}

.nav-toggle-button {
    position: fixed;
    top: 20px;
    left: 20px;
    z-index: 1000;
    padding: 10px;
    background-color: rgb(39, 38, 38);
    color: white;
    border: none;
    border-radius: 8px;
    cursor: pointer;
    font-size: 20px;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: opacity 0.3s ease 0.3s, transform 0.3s ease 0.3s, background-color 0.3s;
}

.nav-toggle-button.hidden {
    opacity: 0;
    transform: translateX(-50px);
    pointer-events: none;
}

.nav-toggle-button.visible {
    opacity: 1;
    transform: translateX(0);
}

.nav-toggle-button:hover {
    background-color: rgb(50, 50, 50);
}

.nav-header {
    width: 100%;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.nav-header h2 {
    margin: 0;
}

.nav-close-button {
    padding: 8px;
    background-color: transparent;
    color: white;
    border: none;
    border-radius: 8px;
    cursor: pointer;
    font-size: 18px;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: background-color 0.3s;
}

.nav-close-button:hover {
    background-color: rgb(50, 50, 50);
}

nav {
    position: fixed;
    left: 0;
    top: 0;
    display: flex;
    flex-direction: column;
    height: 100vh;
    width: 250px;
    background-color: rgb(39, 38, 38);
    color: white;
    align-items: center;
    padding: 20px 10px;
    gap: 20px;
    box-sizing: border-box;
    transition: transform 0.3s ease;
    z-index: 999;
}

nav.nav-open {
    transform: translateX(0);
}

nav.nav-closed {
    transform: translateX(-100%);
}

.new-chat-button {
    display: flex;
    align-items: center;
    gap: 8px;
    padding: 10px 15px;
    background-color: #007bff;
    color: white;
    border: none;
    border-radius: 8px;
    cursor: pointer;
    font-size: 14px;
    transition: background-color 0.2s;
}

.new-chat-button:hover {
    background-color: #0056b3;
}

.chat-history {
    width: 100%;
    display: flex;
    flex-direction: column;
    gap: 10px;
    overflow-y: auto;
}

.chat-history-item {
    display: flex;
    padding: 12px;
    background-color: rgb(50, 50, 50);
    border-radius: 8px;
    cursor: pointer;
    transition: background-color 0.2s;
}

.chat-history-item:hover {
    background-color: rgb(60, 60, 60);
}

.chat-history-item.active {
    background-color: #007bff;
}

.chat-title {
    margin: 0;
    font-size: 13px;
    color: white;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.edit-chat-button {
    margin-left: auto;
    background: none;
    border: none;
    color: white;
    cursor: pointer;
    font-size: 14px;
}

.profile-section {
    margin-top: auto;
    width: 100%;
    position: relative;
}

.profile-button {
    width: 100%;
    display: flex;
    align-items: center;
    gap: 8px;
    padding: 10px;
    background-color: rgb(50, 50, 50);
    color: white;
    border: none;
    border-radius: 8px;
    cursor: pointer;
}

.profile-button:hover {
    background-color: rgb(60, 60, 60);
}

.profile-menu {
    position: absolute;
    bottom: 100%;
    left: 0;
    right: 0;
    background-color: rgb(50, 60, 50);
    border-radius: 8px;
    margin-bottom: 5px;
    padding: 5x;
}

.logout-button {
    width: 100%;
    padding: 10px;
    background-color: #dc3545;
    color: white;
    border: none;
    border-radius: 8px;
    cursor: pointer;
}

.logout-button:hover {
    background-color: #c82333;
}

main {
    height: 100vh;
    flex: 1;
    background-color: rgb(57, 57, 63);
    justify-content: center;
}

.messages-container {
    height: 80vh;
    max-width: 800px;
    overflow-y: auto;
    padding: 20px;
    display: flex;
    flex-direction: column;
    gap: 10px;
    margin: 0 auto;
}

.message {
    display: flex;
    flex-direction: column;
    max-width: 70%;
    padding: 10px 15px;
    border-radius: 10px;
    word-wrap: break-word;
}

.message.user {
    align-self: flex-end;
    background-color: #007bff;
    color: white;
}

.message.response {
    align-self: flex-start;
    background-color: #e9ecef;
    color: black;
}

.message-content {
    display: flex;
    flex-direction: column;
    gap: 5px;
}

.message-content strong {
    font-size: 12px;
}

.message-content p {
    margin: 0;
    font-size: 14px;
}

.message-time {
    font-size: 10px;
    opacity: 0.7;
    margin-top: 5px;
}

.input-container {
    min-width: 450px;
    justify-self: center;
    background-color: white;
    border: none;
    border-radius: 30px;
}

.input {
    min-width: 90%;
    min-height: 40px;
    border: none;
    border-radius: 30px;
    font-size: 17px;
    outline: none;
}

.chat-button {
    width: 40px;
    background-color: white;
    border: none;
    border-radius: 30px;
    font-size: 17px;
}

.chat-button:hover {
    color: gray;
}